<%= form_for [:admin, @client], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :branded_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :branded_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status_code, :class => 'control-label' %>
    <div class="controls">
      <%= select_tag(:status_code, options_for_select(@client.status_codes, @client.status_code)) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :advertising_start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :advertising_start_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :advertising_end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :advertising_end_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :state, options_for_select(us_states, @client.state) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :logo_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :logo_url, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_clients_path, :class => 'btn' %>
  </div>
<% end %>
