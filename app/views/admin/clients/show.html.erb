<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= link_to t('newstore', :default => t('newstore')),
            new_admin_client_store_path(@client.id), :class => 'btn btn-success' %>
<%= link_to t('viewallstores', :default => t('viewallstores')),
            admin_client_stores_path(@client.id), :class => 'btn btn-success' %>


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:branded_name) %>:</strong></dt>
  <dd><%= @client.branded_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @client.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:advertising_start_date) %>:</strong></dt>
  <dd><%= @client.advertising_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:advertising_end_date) %>:</strong></dt>
  <dd><%= @client.advertising_end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @client.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @client.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @client.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @client.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @client.zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo_url) %>:</strong></dt>
  <dd><%= @client.logo_url %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_clients_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_client_path(@client), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
